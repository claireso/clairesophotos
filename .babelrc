{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react"
  ],
  "plugins": [
    "@babel/plugin-syntax-dynamic-import",
    ["@babel/plugin-proposal-class-properties", { "loose": false }],
    ["babel-plugin-styled-components", {
      "ssr": true,
      "displayName": true
    }],
    ["module-resolver", {
      "alias": {
        "@client": "./src/app/client",
        "@admin": "./src/app/admin",
        "@common": "./src/common",
        "@server": "./src/server"
      }
    }]
  ],
  "env": {
    "production": {
      "plugins": [
        ["babel-plugin-styled-components", {
          "ssr": true,
          "displayName": false
        }]
      ]
    }
  }
}
