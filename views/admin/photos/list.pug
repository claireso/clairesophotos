extends ../admin.pug

block content
  h1 List photos

  p.align-right
    a.btn.btn--icon(href="/admin/photos/new") 
      span New photo
      svg(xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24")
        path(d="M18.984 12.984h-6v6h-1.97v-6h-6v-1.97h6v-6h1.97v6h6v1.97z")

  ul.list
    each photo in photos
      li.list__item
        div.list__picture
          img(src="/img/" + photo.name)
        div.list__text
          h2.title= photo.title
          p.subtitle= photo.description
          p.list__buttons
            a.btn(href="/admin/photos/" + photo.id + "/edit") Edit
            a.btn(href="/admin/photos/" + photo.id + "/delete") Delete

  p.align-right
    a.btn.btn--icon(href="/admin/photos/new") 
      span New photo
      svg(xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24")
        path(d="M18.984 12.984h-6v6h-1.97v-6h-6v-1.97h6v-6h1.97v6h6v1.97z")

  ul.pager
    if pager.prev
      if pager.first
        li.pager__item
          a.btn.btn--gray(href="/admin/photos/page/" + pager.first) ««
      li.pager__item
        a.btn.btn--gray(href="/admin/photos/page/" + pager.prev) «
    if pager.next
      li.pager__item
        a.btn.btn--gray(href="/admin/photos/page/" + pager.next) »
      if pager.last
        li.pager__item
          a.btn.btn--gray(href="/admin/photos/page/" + pager.last) »»
